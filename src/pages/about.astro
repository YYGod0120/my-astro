---
import { ViewTransitions, fade } from "astro:transitions";
import Header from "../components/Header.astro";
import Card from "../components/Card.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import avatar from "../images/cards/avatar.png";
import wechat from "../images/cards/wechat.jpg";
import github from "../images/cards/github.png";
import qq from "../images/cards/qq.png";
import "../styles/move.css";
import "../styles/fontFamily.css";
import { anmi } from "../utils/makeMoving";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <ViewTransitions />
  </head>
  <body class="h-screen">
    <Header title={SITE_TITLE} />
    <div
      class="grid grid-cols-4 gap-4 mt-5 px-9 grid-rows-3"
      style="height: 88vh"
    >
      <Card
        titleColor="text-sky-800"
        title="Photo"
        style="border border-gray-600  row-span-2 overflow-hidden rounded-md"
        cardMain="bg-sky-800 h-full flex items-center justify-center "
        anim={anmi(1550, "500px")}
      >
        <Image
          alt="Photo"
          src={avatar}
          width={150}
          height={200}
          class="mb-16 rounded-full"
        />
      </Card>

      <Card
        titleColor="text-blue-300"
        title="About Me"
        style="border border-gray-600 col-span-2 overflow-hidden row-span-2 rounded-md"
        cardMain="bg-blue-300 h-full"
        anim={anmi(800, "400px")}
      >
        <Image alt="Photo" src={wechat} width={150} height={200} class="" />
      </Card>
      <Card
        titleColor="text-blue-300"
        title="Where"
        style=" border border-gray-600 overflow-hidden rounded-md"
        cardMain="bg-blue-300 h-full"
        anim={anmi(300, "500px")}
      >
        <div
          class="where flex flex-col items-center font-bold pt-10 text-blue-300"
        >
          <div class="w-7/12 text-center mb-5 bg-white">CHONGQING</div>
          <div class="w-7/12 text-center bg-white">FUZHOU</div>
        </div>
      </Card>
      <Card
        title="Friends"
        style=" border border-gray-600 overflow-hidden rounded-md row-span-2 "
        cardMain="bg-pink-300 h-full"
        titleColor="text-pink-300"
        anim={anmi(550, "500px")}
      >
        <div class="flex flex-col items-center pt-10">
          <div class="w-7/12 bg-white rounded-[15px] mb-5 bg-opacity-50">
            <span class="text-xl ml-5 mr-5 ALF">老孙</span>
            <a
              href="https://sunsunmonkey.github.io/"
              class="text-sm text-gray-500 hover:underline hover:text-gray-500"
              >写前端的孙悟空</a
            >
          </div>
          <div class="w-7/12 bg-white rounded-[15px] mb-5 bg-opacity-50">
            <span class="text-xl ml-5 mr-5 ALF">海川</span>
            <a
              href="https://sunsunmonkey.github.io/"
              class="text-sm text-gray-500 hover:underline hover:text-gray-500"
              >杂七杂八大佬</a
            >
          </div>
        </div>
      </Card>
      <Card
        titleColor="text-green-500"
        title="WeChat"
        style=" border border-gray-600 overflow-hidden rounded-md"
        cardMain="bg-green-500 h-full flex justify-center "
        anim={anmi(1800, "500px")}
      >
        <svg
          slot="icon"
          class="icon"
          viewBox="0 0 1024 1024"
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
          p-id="4672"
